<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_deliveryslip_inherit">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class='page' style="font:13px">
                        <div class="text-center">
                            <h4>
                                <span>BORDEREAU DE LIVRAISON N° :</span>
                                <span t-field="o.name"/>
                            </h4>
                        </div>
                        <br/>
                        <div class="row">
                            <div class="col-4 text-left">
                                <span>N° DE COMMANDE :</span>
                                <t t-if='o.origin'>
                                    <span t-field="o.origin"/>
                                </t>
                                <p>
                                    <span>DATE DE COMMANDE : </span>
                                    <span t-esc="o.date" t-options='{"widget": "date", "date_format": "DD/MM/YYYY"}'/>
                                </p>
<!--                                <p>-->
<!--                                    <span>N° LIVRAISON : </span>-->
<!--                                    <t t-if="o.delivery_id">-->
<!--                                        <span t-field="o.delivery_id"/>-->
<!--                                    </t>-->
<!--                                </p>-->
                            </div>
                            <div class="col-2 text-right" style="margin-right:50px">
<!--                                <span style="text-decoration: underline;">CLIENT : </span>-->
<!--                               <p><strong>Téléphone :</strong></p>-->
                            </div>
                            <div class='col-6' style="margin-right:50px">
                                <span t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;,&quot;phone&quot;], &quot;no_marker&quot;: True}"/>
<!--                                <p><span t-field="o.partner_id.phone"/></p>-->
                            </div>
                            <div>
                                <strong>Téléphone :</strong>
                                <span t-field="o.partner_id.phone"/>
                            </div>
                        </div>
                        <br/>
                        <table class="table table-sm o_main_table table-bordered">
                            <thead>
                                <tr>
                                    <th name="th_sm_product">
                                        <strong>Produits</strong>
                                    </th>
                                    <th name="th_sm_product" class="text-left">
                                        <strong>Quantite</strong>
                                    </th>
                                    <th name="th_sm_ordered" class="text-center">
                                        <strong>Gestionnaire</strong>
                                    </th>
                                    <th name="th_sm_ordered" class="text-center">
                                        <strong>Numero de serie</strong>
                                    </th>
                                    <th name="th_sm_quantity" class="text-center">
                                        <strong>Date Debut</strong>
                                    </th>
                                    <th name="th_sm_pcs" class="text-center">
                                        <strong>Durée(mois)</strong>
                                    </th>
                                    <th name="th_sm_pcs" class="text-center">
                                        <strong>Date Fin</strong>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="lines" t-value="o.move_line_ids"/>
                                <t t-set='PIECE' t-value='0'/>
                                <t t-if="lines">
                                <tr t-foreach="lines" t-as="move">
                                    <t t-if="move.product_id.is_asset">
                                        <t t-if="move.product_uom_qty > 0">
                                            <t t-set='PIECE' t-value="PIECE + move.product_uom_qty"/>
                                        </t>
                                        <t t-else="">
                                            <t t-set='PIECE' t-value="PIECE + move.qty_done"/>
                                        </t>
                                        
                                    </t>

                                    <td>
                                        <span t-field="move.product_id"/>
                                    </td>
                                    <td>
                                        <t t-if="move.is_maintenance == true">
                                            --
                                        </t>
                                        <t t-else="">
                                            <t t-if="move.product_uom_qty > 0">
                                            <span t-field="move.product_uom_qty"/>
                                            </t>
                                            <t t-else="">
                                             <span t-field="move.qty_done"/>
                                            </t>
                                        </t>


                                    </td>
                                    <td class="text-center">
                                        <span t-field="move.entreprise_id"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-field="move.number_serie"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-field="move.date_debut" />
                                    </td>
                                    <td class="text-center">
                                        <t t-if="move.duree_en_mois > 0">
                                            <span t-field="move.duree_en_mois" />
                                        </t>
                                        <t t-else="">

                                        </t>

                                        
                                    </td>
                                    <td class="text-center">
                                        <span t-field="move.date_fin" />
                                    </td>
                                </tr>
                                </t>
                                
                                <tr>
                                    <td class="text-center" colspan="2"><strong>TOTAL BORNE</strong></td>

                                    <td class="text-center"><strong><span t-esc="PIECE" t-options='{"widget": "float", "precision": 0}'/></strong></td>
                                </tr>
                            </tbody>
                        </table>            
                        <div class="row mt-5">
                            <div class="col-6">
                                <p style="font-weight : bold; font-size:1.2em">Signature du client</p>
                                <p class="mt-3">Reçu le : </p>
                                <p class="mt-3">Signature : </p>
                            </div>
                            <div class="col-6 ml-5">
                                <p style="font-weight : bold; font-size:1.2em">Signature du livreur</p>
                                <p class="mt-3">Livré le : </p>
                                <p class="mt-3">Signature : </p>
                            </div>
                        </div>

                        <div t-if="o.signature" class="mt32 ml64 mr4" name="signature">
                            <div class="offset-8">
                                <strong>Signature</strong>
                            </div>
                            <div class="offset-8">
                                <img t-att-src="image_data_uri(o.signature)" style="max-height: 4cm; max-width: 8cm;"/>
                            </div>
                            <div class="offset-8 text-center">
                                <p t-field="o.partner_id.name"/>
                            </div>
                        </div>
                    </div>        
                </t>
            </t> 
        </t>   
    </template>

