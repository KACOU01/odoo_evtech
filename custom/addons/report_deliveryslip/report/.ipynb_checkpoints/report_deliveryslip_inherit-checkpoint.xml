<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_deliveryslip_inherit_nev">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                    <div class="text-center">
                        <h3>BORDEREAU DE LIVRAISON</h3>
                    </div>
                    <div class="row mt-3">
                        <div class="col-6 text-left" style="font-size:1.3em; font-weight:bold">
                            <p>
                                Responsable : <span t-field="o.user_id" /> <br /> Contact : <span t-field="o.user_id.phone" />
                            </p>
                        </div>
                        <div class="col-6 text-right" style="font-size:1.3em; font-weight:bold">
                            <p>
                                <span t-field="o.company_id" />
                            </p>
                        </div>
                    </div>
                <div class="page mt-3">
            <!--                     <h2>
                        <span t-field="o.name"/>
                    </h2> -->
                    <div class="row mt32 mb32 mt-5 mb-5">
                        <div t-if="o.origin" class="col-auto" name="div_origin">
                            <div>
                                <strong>Société :</strong>
                                <span t-field="o.company_id"/>
                            </div>
                            <div>
                                <strong>Bon de commande N°:</strong>
                                <span t-field="o.origin"/>
                            </div>
                            <div>
                                <strong>Client :</strong>
                                <span t-field="o.partner_id"/>
                            </div>
                            <div>
                                <strong>Téléphone :</strong>
                                <span t-field="o.partner_id.phone"/>
                            </div>
                        </div>
                        <div t-if="o.state" class="col-auto text-right" name="div_sched_date">
                            <t t-if="o.delivery_id">
                                <strong>Véhicule de livraison :</strong>
                                <span t-field="o.delivery_id.fleet_vehicle"/>
                            </t>
                            <br />
                            <strong>Date de livraison :</strong>
                            <t t-if="o.state == 'done'">
                                <span t-field="o.date_done"/>
                            </t>
                            <t t-if="o.state != 'done'">
                                <span t-field="o.scheduled_date"/>
                            </t>
                            <br />
                            <t t-if="o.delivery_zone_id">
                                <strong>Zone de livraison :</strong>
                                <span t-field="o.delivery_zone_id"/>
                            </t>
                            <br />
                            <t t-if="o.delivery_id">
                                <strong>Livreur :</strong>
                                <span t-field="o.delivery_id.delivery_agent.name"/>
                            </t>
                        </div>
                    </div>
            <table class="table table-sm o_main_table table-bordered">
                <thead>
                    <tr>
                        <th name="th_sm_product">
                            <strong>PRODUIT</strong>
                        </th>
                        <th name="th_sm_product">
                            <strong>NBRES PIECES/CARTONS</strong>
                        </th>
                        <th name="th_sm_ordered" class="text-uppercase">
                            <strong>Qtés Commandées</strong>
                        </th>
                        <th name="th_sm_quantity" class="text-uppercase">
                            <strong>Qtés livrées</strong>
                        </th>
                        <th name="th_sm_pcs">
                            <strong>NBRES PIECES</strong>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="lines" t-value="o.move_lines.filtered(lambda x: x.product_uom_qty)"/>
                    <tr t-foreach="lines" t-as="move">
                        <td>
                            <span t-field="move.product_id"/>
                            <p t-if="move.description_picking != move.product_id.name and move.description_picking != move.product_id.display_name">
                                <span t-field="move.description_picking"/>
                            </p>
                        </td>
                        <td>
                            <!--                                     <span t-field="move.product_uom_qty"/>
                                    <span t-field="move.product_uom"/> -->
                            <span t-field="move.product_packaging_id"/>
                        </td>
                        <td>
                            <span t-field="move.product_packaging_qty"/>
                        </td>
                        <td>
                            <span t-field="move.packaging_qty_done"/>
                        </td>
                        <td>
                            <span t-field="move.product_uom_qty"/>
                        </td>
                    </tr>
                </tbody>
            </table>            
            <div class="row mt-5">
                <div class="col-6">
                    <p style="font-weight : bold; font-size:1.2em">Signature du client</p>
                    <p class="mt-3">Reçu le : </p>
                    <p class="mt-3">Signature : </p>
                </div>
                <div class="col-6 ml-5">
                    <p style="font-weight : bold; font-size:1.2em">Signature du livreur</p>
                    <p class="mt-3">Livré le : </p>
                    <p class="mt-3">Signature : </p>
                </div>
            </div>

            <div t-if="o.signature" class="mt32 ml64 mr4" name="signature">
                <div class="offset-8">
                    <strong>Signature</strong>
                </div>
                <div class="offset-8">
                    <img t-att-src="image_data_uri(o.signature)" style="max-height: 4cm; max-width: 8cm;"/>
                </div>
                <div class="offset-8 text-center">
                    <p t-field="o.partner_id.name"/>
                </div>
            </div>
        </div>
            </t>
        </t>   
    </template>

    <template id="report_deliveryslip_inherit">
        <t t-foreach="docs" t-as="o">
            <t t-call="hta_report_deliveryslip.report_deliveryslip_inherit_nev" t-lang="o.partner_id.lang"/>
        </t>
    </template>
</odoo>
