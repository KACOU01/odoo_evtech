<odoo>
    <data>
        <record id="product_template_asset_views" model="ir.ui.view">
            <field name="name">product_template_asset_views</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/div[@name='options']" position='inside'>
                    <span class="d-inline-block">
                        <field name="is_asset"/>
                        <label for="is_asset"/>
                    </span>
                </xpath>

                <xpath expr="//field[@name='detailed_type']" position='after'>
                    <field name="type_product"/>
                </xpath>
            </field>
        </record>

        <record id="product_template_product_tree" model="ir.ui.view">
            <field name="name">product_product_type</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">

                <field name="default_code" position='replace'>
                    <field name="type_product"/>
                </field>
                <field name="standard_price" position='replace'>

                </field>
                <field name="uom_id" position='replace'>

                </field>
                <field name="product_template_variant_value_ids" position='replace'>

                </field>
<!--                <field name="virtual_available" position='replace'>-->

<!--                </field>-->
            </field>
        </record>

        <record id="product_product_stock_quant_tree" model="ir.ui.view">
            <field name="name">stock.quant</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="stock.view_stock_product_tree"/>
            <field name="arch" type="xml">
                <field name="qty_available" position="replace">
                    <field name="qty_available" attrs="{'invisible':['|',('type', '!=', 'product'),('type_product','!=','produit')]}" optional="show" decoration-danger="virtual_available &lt; 0" decoration-warning="virtual_available == 0" decoration-bf="1"/>
                </field>

                <field name="virtual_available" position='replace'>
                    <field name="virtual_available" attrs="{'invisible':[('type', '!=', 'product')]}" string="Forecasted Quantity" optional="hide" decoration-danger="virtual_available &lt; 0" decoration-warning="virtual_available == 0"/>
                </field>
            </field>
        </record>
    </data>
</odoo>