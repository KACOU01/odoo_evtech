<odoo>
    <data>
        <record model="ir.ui.view" id="res_partner_views_asset">
            <field name="name">res_partner_views_asset</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">

                <field name="country_id" position='after'>
                    <!--              <field name="model_asset" string="Modele Cong"/>-->
                    <field name="asset_nbr" optional="hide" sum="Total"/>

                </field>

            </field>
        </record>

        <record id="res_partner_view_asset_buttons" model="ir.ui.view">
            <field name="name">partner_asset.view.buttons</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="groups_id" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="object" name="action_view_asset_assignment"
                            groups="sales_team.group_sale_salesman"
                            icon="fa-credit-card">
                        <field string="Borne" name="asset_nbr" widget="statinfo"/>
                    </button>
                </div>
            </field>
        </record>

        <record id="view_res_partner_tree_inherit_asset" model="ir.ui.view">
            <field name="name">res.partner.tree.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
<!--                <xpath expr="." position="inside">-->
<!--                    <header>-->
<!--                        <button name="button_asset_upgrade" string="Assigne Borne" type="object"/>-->
<!--                    </header>-->
<!--                </xpath>-->

            </field>
        </record>

        <record id="view_replace_form_" model="ir.ui.view">
            <field name="name">Replace</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <field name="function" position="replace">
                    <field name="function" placeholder="e.g. Sales Director"
                           attrs="{'invisible': [('is_company','=', True)]}" invisible="1"/>
                </field>
                <field name="email" position="replace">
                    <field name="email" widget="email" context="{'gravatar_image': True}" string="Email Fournisseur"
                           attrs="{'invisible': [('is_supplier', '=', False)], 'required':[('is_supplier', '=', True)]}"/>
                    <field name="email" widget="email" context="{'gravatar_image': True}" string="Email Ref"
                           attrs="{'invisible': [('is_supplier', '=', True)], 'required':[('is_supplier', '=', False)]}"/>
                </field>
                <field name="website" position="replace">
                    <field name="website" string="Website" widget="url" placeholder="e.g. https://www.odoo.com"
                           invisible="1"/>
                </field>
<!--                <label name="phone" posotion="replace">-->

<!--                </label>-->
                <field name="phone" position="replace">
                    <field name="phone" string="" invisible="1"/>
                    <!--                    <field name="phone" widget="phone" string="Téléphone" invisible="1"/>-->
                </field>
                <field name="mobile" position="replace">
                    <field name="mobile" string="Téléphone Ref" attrs="{'required':[('is_supplier', '=', False)], 'widget':'phone'}"/>
                </field>
                <field name="title" position="replace">
                    <field name="title" options="{&quot;no_open&quot;: True}" placeholder="e.g. Mister"
                           attrs="{'invisible': [('is_company', '=', True)]}" invisible="1"/>
                </field>
                <field name="category_id" position="replace">
                    <field name="category_id" string="Famille client" widget="many2many_tags"
                           options="{'color_field': 'color', 'no_create_edit': True}" placeholder="Famille"
                           invisible="1"/>
                </field>

                <field name="user_id" position="replace">
                     <field name="user_id" string="Commercial(e)" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" placeholder="Commercial"  attrs="{'invisible': [('is_supplier', '=', True)], 'required':[('is_supplier', '=', False)]}"/>
                </field>

                <xpath expr="//sheet/notebook/page[@name='sales_purchases']" position="replace">
                    <page name="sales_purchases" string="Sales &amp; Purchase" invisible="1">
                        <group name="container_row_2">
                            <group string="Sales" name="sale" priority="1">
                                <field name="user_id" domain="[('share', '=', False)]"/>
                            </group>
                            <group string="Purchase" name="purchase" priority="2">
                            </group>
                            <group name="misc" string="Misc">
                                <field name="ref" string="Reference"/>
                                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"
                                       attrs="{'readonly': [('parent_id', '!=', False)]}" force_save="1"/>
                                <field name="industry_id" attrs="{'invisible': [('is_company', '=', False)]}"
                                       options="{'no_create': True}"/>
                            </group>
                        </group>
                    </page>
                </xpath>

                <xpath expr="//sheet/notebook/page[@name='internal_notes']" position="replace">
                    <page name="internal_notes" string="Internal Notes" invisible="1">
                        <field name="comment" placeholder="Internal note..."/>
                    </page>
                </xpath>
                <xpath expr="//sheet/notebook/page[@name='contact_addresses']" position="replace">
                </xpath>

                <!--                <xpath expr="//sheet/group/group[1]" position="replace">-->
                <!--                    <group>-->
                <!--                        <field name="street" placeholder="Rue" string="Rue"/>-->
                <!--                        <field name="zip" string="Adresse Postal"/>-->
                <!--                        <field name="country_id" placeholder="Pays" class="o_address_country"-->
                <!--                               options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" string="Pays"/>-->


                <!--                        <div class="oe_edit_only">-->
                <!--                            <group>-->
                <!--                                <field-->
                <!--                                        name="lastname_inter"-->
                <!--                                        attrs="{'invisible': [('is_supplier', '=', True)]}"-->
                <!--                                />-->
                <!--                                <field-->
                <!--                                        name="firstname_inter"-->
                <!--                                        attrs="{'invisible': [('is_supplier', '=', True)]}"-->
                <!--                                />-->
                <!--                            </group>-->
                <!--                        </div>-->

                <!--                    </group>-->
                <!--                </xpath>-->
                <!--                <xpath expr="//sheet/div[2]/h1" position="replace">-->
                <!--                    <h1>-->
                <!--                        <field id="company" class="text-break" name="name" default_focus="1"-->
                <!--                               placeholder="e.g. Lumber Inc" required="1"/>-->
                <!--                    </h1>-->
                <!--                </xpath>-->
                <!-- <xpath expr="//form/sheet/group/group[1]/field[@name='street']" position="before">


                </xpath> -->
                <!--                <xpath expr="//form/sheet/group/group[1]/field[@name='country_id']" position="after">-->
                <!--                    <field name="property_product_pricelist"-->
                <!--                           options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"-->
                <!--                           attrs="{'invisible': [('is_supplier', '=', True)], 'required':[('is_supplier', '=', False)]}"/>-->
                <!--                </xpath>-->
                <xpath expr="//sheet/div[2]/field[@name='company_type']" position='after'>
                    <div>
                        <label for="is_customer" string="Est un client"
                               attrs="{'invisible': [('is_supplier', '=', True)]}"/>
                        <field name="is_customer" no_label="1" attrs="{'invisible': [('is_supplier', '=', True)]}"
                               readonly="1"/>

                        <label for="is_supplier" string="Est un Fournisseur"
                               attrs="{'invisible': [('is_supplier', '=', False)]}"/>
                        <field name="is_supplier" no_label="1" attrs="{'invisible': [('is_supplier', '=', False)]}"
                               readonly="1"/>
                    </div>
                </xpath>
                <xpath expr="//sheet" position="after">
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </xpath>
            </field>
        </record>


        <record id="action_contacts_supplier" model="ir.actions.act_window">
            <field name="name">Fournisseurs</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_is_supplier': True}</field>
            <field name="domain">[('is_supplier', '=', True)]</field>
        </record>
        <record id="action_contacts_customer" model="ir.actions.act_window">
            <field name="name">Clients</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_is_customer': True}</field>
            <field name="domain">[('is_customer', '=', True)]</field>
        </record>


        <!-- Menu pour les clients -->
        <menuitem id="menu_contacts_customer" name="Clients" parent="contacts.menu_contacts"
                  action="action_contacts_customer" sequence="1"/>
        <!-- Menu pour les fournisseurs -->
        <menuitem id="menu_contacts_supplier" name="Fournisseurs" parent="contacts.menu_contacts"
                  action="action_contacts_supplier" sequence="2"/>
        <!-- Déplacer menu configuration-->
        <record id="contacts.res_partner_menu_contacts" model="ir.ui.menu">
            <field name="sequence">80</field>
        </record>
        <record id="contacts.res_partner_menu_config" model="ir.ui.menu">
            <field name="sequence">99</field>
        </record>


    </data>
</odoo>