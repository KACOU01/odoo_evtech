<odoo>
    <record id="view_stock_picking_form_inherited" model="ir.ui.view">
        <field name="name">stock.picking.form.inherited</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook/page[@name='operations']/field[@name='move_ids_without_package']/tree/field[@name='lot_ids']" position="after">

                <field name="date_debut" attrs="{'readonly': [('is_maintenance', '!=', True)]}"/>
                <field name="duree_en_mois" attrs="{'readonly': [('is_maintenance', '!=', True)]}" widget="counted_quantity_widget"/>
                    <field name="date_fin" attrs="{'readonly': [('is_maintenance', '!=', True)]}"/>
                    <field name="is_maintenance" string="M/A" optional="hide"/>
             </xpath>
        </field>
    </record>
          <record id="stock_move_line_packaging_views" model="ir.ui.view">
          <field name="name">stock_line_packaging_views</field>
          <field name="model">stock.move.line</field>
          <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
          <field name="arch" type="xml">
              <field name='qty_done' position="after">
                  <field name="entreprise_id" attrs="{'readonly': [('is_asset', '!=', True)]}"/>
                  <field name="date_debut" attrs="{'readonly': [('is_asset', '!=', True)]}"/>
                  <field name="duree_en_mois" attrs="{'readonly': [('is_asset', '!=', True)]}" widget="counted_quantity_widget"/>
                  <field name="date_fin" attrs="{'readonly': [('is_asset', '!=', True)]}"/>
                  <field name="is_maintenance" string="M/A" optional="hide"/>
                  <field name="is_asset" string="Est une borne" optional="hide"/>
              </field>
              <field name="product_uom_id" position='replace'>
                 <field name="product_uom_id" invisible="1" string="Unit of Measure" groups="uom.group_uom" optional="hide"/>
                </field>
              <field name="product_id" position='after'>
                 <field name="number_serie" attrs="{'readonly': [('is_asset', '!=', True)]}"/>
                </field>
              <field name="lot_id" position='after'>
                 <field name="lot_id" optional="hide"/>
                </field>

              <field name="location_id" position='replace'>
                 <field name="location_id" groups="stock.group_stock_multi_locations" optional="hide"/>

              </field>

          </field>
      </record>
</odoo>