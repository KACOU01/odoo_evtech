<odoo>
  <data>
      <!--- Payment -->
      <record id="partner_payment_form_view" model='ir.ui.view'>
          <field name="name">Paiment</field>
          <field name="model">partner.payment.usage</field>
          <field name="arch" type="xml">
              <form>
                  <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,cancel" statusbar_colors='{"draft":"blue","confirm":"green","cancel":"red"}'/>
                  </header>
                  <sheet>
                      <div class="oe_title">
                        <label for="name" string='Reference'/>
                        <h1>
                            <field name="name" required="1" readonly='1'/>
                        </h1>
                      </div>
                      <group>

                          <group>
                              <field name="asset_id" options="{'no_create': True}" required="1"/>
                              <field name="partner_id" options="{'no_create': True}"/>
                              <field name="commission" string="Commissiion" />
                          </group>
                          <group>
                              <field name="usager_id"/>
                              <field name="date" required="1"/>
                          </group>
                          <group>
                              <field name="amount" string="Montant Paiment"/>
                              <field name="amount_commission" string="Montant Commission"/>
                          </group>
                      </group>
                  </sheet>
                  <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                  </div>
              </form>
          </field>
      </record>
      <record id="partner_payment_tree_view" model="ir.ui.view">
          <field name="name">Paiment</field>
          <field name="model">partner.payment.usage</field>
          <field name="arch" type="xml">
              <tree>
                <field name="name"/>
                <field name="asset_id"/>
                <field name="partner_id"/>
                <field name="amount"/>
                <field name='amount_commission'/>
                <field name="state"/>

              </tree>
          </field>
      </record>
      <record id="action_payment_usage" model="ir.actions.act_window">
          <field name="name">Paiement</field>
          <field name="res_model">partner.payment.usage</field>
          <field name="type">ir.actions.act_window</field>
          <field name="view_mode">tree,form</field>
          <field name="help" type="xml">
              <p class="o_view_nocontent_smiling_face">
                   Paiement sur Borne Client
                </p><p>

                </p>
          </field>
      </record>

      <!--- Usager -->
      <record id="partner_usager_form_view" model='ir.ui.view'>
          <field name="name">Usager</field>
          <field name="model">partner.usager</field>
          <field name="arch" type="xml">
              <form>
                  <header>

                  </header>
                  <sheet>
                      <group>
                          <group>
                              <field name="name" string='Nom' required="1"/>
                              <field name="phone" string="TÃ©lÃ©phone" required="1"/>
                          </group>
                      </group>

                  </sheet>
<!--                  <div class="oe_chatter">-->
<!--                    <field name="message_follower_ids" widget="mail_followers" />-->
<!--                    <field name="message_ids" widget="mail_thread" />-->
<!--                  </div>-->
              </form>
          </field>
      </record>
      <record id="partner_usager_tree_view" model="ir.ui.view">
          <field name="name">Usager</field>
          <field name="model">partner.usager</field>
          <field name="arch" type="xml">
              <tree>
                <field name="name"/>
                <field name="phone"/>
              </tree>
          </field>
      </record>
      <record id="action_partner_usager" model="ir.actions.act_window">
          <field name="name">Usager</field>
          <field name="res_model">partner.usager</field>
          <field name="type">ir.actions.act_window</field>
          <field name="view_mode">tree,form</field>
          <field name="help" type="xml">
              <p class="o_view_nocontent_smiling_face">
                    Enregistrer les usagers ici !!!
                </p><p>

                </p>
          </field>
      </record>
  </data>
</odoo>