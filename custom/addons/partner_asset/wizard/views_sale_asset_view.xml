<odoo>
    <data>
        <!-- Vue de formulaire pour le wizard -->
        <record id="view_create_sale_order_wizard_form" model="ir.ui.view">
            <field name="name">create.sale.order.wizard.form</field>
            <field name="model">create.sale.order.wizard</field>
            <field name="arch" type="xml">
                <form string="Creer un devis">
                    <group>
                        <field name="partner_id" options="{'no_create': True}" string="Client"/>
<!--                        <field name="contract_id" domain="
 [('partner_id', '=', partner_id)]"/>-->
                        <field name="asset_id" readonly='1' options="{'no_create': True}" string="Borne"/>
                        <field name="service_ids" readonly='1' options="{'no_create': True}" string="Services"/>
                    </group>
                    <footer>
                        <button name="create_sale_order" string="Creer le Devis" type="object" class="oe_highlight"/>
                        <button string="Annuler" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
