<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sale_order_new_report_evtech">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page" style="font-size : 0.7.em;">
                        <div class="oe_structure"/>
                    <!-- <div class="row" style="margin-bottom:150px"> -->
                    <div class="row" style="margin-bottom:50px; width: auto; margin: 0; padding: 0px">
                        <div class="col-6 text-left" style="padding:0px; margin:0px">
                            <h2 class="mt16">
                                <span>DEVIS n°</span>

                                <span t-field="doc.name"/>
                            </h2>

                        </div>
                        <div class="col-6 text-right" style="padding:0px; margin:0px">

                            <img src='/sale_report/static/src/img/ev-tech.png'
                                 style="magin:0px; padding:0px; max-width: 100%; height: auto; width: auto"/>


                        </div>
                    </div>
                    <hr/>
                    <div class="row">

                        <div class="col-6" style="font-size : 0.7.em;">
                            <p style="padding: 5px;">
                                <strong>Mon Entreprise</strong>
                            </p>
                            <p style="padding: 5px;">
                                <span t-field="doc.company_id.street"/>
                                <br/>
                                <span t-field="doc.company_id.street2"/>,
                                <span t-field="doc.company_id.country_id.name"/>
                                <br/>
                                <span t-field="doc.company_id.phone"/>
                            </p>

                        </div>


                    </div>
                    <br/>
                    <div class="row">
                        <style>
                            .custom-table {
                            background-color: #f2f2f2; /* ou une autre couleur de fond que vous préférez */
                            }

                            .custom-table td, .custom-table th {
                            padding: 5px; /* Ajustez la valeur en fonction de l'espacement souhaité */
                            }
                        </style>
                        <div class="col-7" style="background-color: #f2f2f2; font-size : 0.7.em;">
                            <table class="table table-borderless custom-table">
                                <tr>
                                    <th name="th_date" class="text-left" style="padding: 5px;">Date</th>
                                    <th name="" class="text-left" style="padding: 5px;">
                                        <span t-field="doc.date_order"
                                              t-options='{"widget": "date", "date_format": "DD/MM/YYYY"}'/>
                                    </th>
                                </tr>
                                <tr>
                                    <th name="th_date" class="text-left" style="padding: 5px;">Reference Devis</th>
                                    <th name="" class="text-left" style="padding: 5px;">
                                        <span t-field="doc.name"/>
                                    </th>
                                </tr>
                                <tr>
                                    <th name="th_date" class="text-left" style="padding: 5px;">Date de validité</th>
                                    <th name="" class="text-left" style="padding: 5px;">
                                        <span t-field="doc.validity_date"
                                              t-options='{"widget": "date", "date_format": "DD/MM/YYYY"}'/>
                                    </th>
                                </tr>
                                <tr>
                                    <th name="th_date" class="text-left" style="padding: 5px;">Emis par</th>
                                    <th name="" class="text-left" style="padding: 5px;">
                                        <span t-field="doc.user_id"/>
                                    </th>
                                </tr>
                                <tr>
                                    <th name="th_date" class="text-left" style="padding: 5px;">Contact du client</th>
                                    <th name="" class="text-left" style="padding: 5px;">
                                        <span t-field="doc.partner_id"/>
                                    </th>
                                </tr>
                                <tr>
                                    <th name="th_date" class="text-left" style="padding: 5px;">Date de debut de la
                                        presentation
                                    </th>
                                    <th name="" class="text-left" style="padding: 5px;">
                                        <span t-field="doc.validity_date"
                                              t-options='{"widget": "date", "date_format": "DD/MM/YYYY"}'/>
                                    </th>
                                </tr>
                            </table>
                        </div>
                        <div class="col-5 text-left" style="left: 50px">
                            <p style="font-size : 0.7.em; font-weight : bold; padding: 5px;">
                                <strong>Destinataire</strong>
                            </p>
                            <p style="padding: 5px;">
                                <strong>Acheteur SA</strong>
                                <br/>
                                <span t-field="doc.partner_id"/>
                                <br/>
                                <span t-field="doc.partner_id.street"/>
                                <br/>
                                <span t-field="doc.partner_id.street2"/>
                                <br/>
                                <span t-field="doc.partner_id.country_id.name"/>
                            </p>
                        </div>
                    </div>
                    <br/>

                    <t t-set="forced_vat" t-value="doc.fiscal_position_id.foreign_vat"/>

                        <div class="oe_structure"/>
                        <span>Information additionelles</span>
                        <br/>
                        <span>Service après-vente - Garantie 1 ans</span>
<!--                        <span t-field="doc.note"/>-->

                        <br/> <br/>
                        <h1><hr/></h1>
                        <t t-set="display_discount" t-value="any(l.discount for l in doc.order_line)"/>

                        <table class="table table-sm table-bordered border-primary">
                            <thead style="display: table-row-group">
                                <tr>
                                    <th name="th_description" class="text-left">Description</th>
                                    <th name="th_quantity" class="text-center">Quantité</th>
                                    <th name="th_priceunit" class="text-center">Unité</th>
                                    <th name="th_price" class="text-center">Prix Unitaire HT</th>
                                    <th name="th_tax" class="text-center">% TVA</th>
                                    <th name="th_tax" class="text-center">Total TVA</th>
                                    <th name="th_subtotal" class="text-right">
                                        <span>Total TTC</span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">

                                <t t-set="current_subtotal" t-value="0"/>

                                <t t-foreach="doc.order_line" t-as="line">

                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                                       groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                                       groups="account.group_show_line_subtotals_tax_included"/>

                                    <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <t t-if="not line.display_type">
                                            <td name="td_name">
                                                <span t-field="line.name"/>
                                            </td>
                                            <td name="td_quantity" class="text-right">
                                                <span t-field="line.product_uom_qty"/>
                                            </td>
                                            <td name="td_unit" class="text-right">
                                                <span t-field="line.product_uom"/>
                                            </td>
                                            <td name="td_priceunit" class="text-right">
                                                <span t-field="line.price_unit"
                                                      t-options='{&quot;widget&quot;: &quot;monetary&quot;,"display_currency": doc.pricelist_id.currency_id,}'/>
                                            </td>
                                            <!-- <t t-if="line.discount > 0">
                                              <td class="text-right">
                                                <span t-field="line.discount"/>
                                                </td>

                                            </t> -->
                                            <!-- <t t-else="">
                                                <td class="text-center">

                                                </td>
                                            </t> -->
                                            <td name="td_taxes" class="text-right">
                                                <span t-esc="', '.join(map(lambda x: str(x.amount), line.tax_id))"/>

                                            </td>

                                            <td name="td_taxes" class="text-right">
                                                <span t-field="line.price_tax"
                                                      t-options='{&quot;widget&quot;: &quot;monetary&quot;,"display_currency": doc.pricelist_id.currency_id,}'/>
                                            </td>
                                            <td name="td_subtotal" class="text-right o_price_total">
                                                <!--<span t-esc="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded" t-options='{&quot;widget&quot;: &quot;monetary&quot;,"display_currency": doc.pricelist_id.currency_id,}'/>-->
                                                <span t-field="line.price_subtotal"
                                                      t-options='{&quot;widget&quot;: &quot;monetary&quot;,"display_currency": doc.pricelist_id.currency_id,}'/>
                                            </td>
                                        </t>
                                        <t t-if="line.display_type == 'line_section'">
                                            <td name="td_section_line" colspan="99">
                                                <span t-field="line.name"/>
                                            </td>
                                            <t t-set="current_section" t-value="line"/>
                                            <t t-set="current_subtotal" t-value="0"/>
                                        </t>
                                        <t t-if="line.display_type == 'line_note'">
                                            <td name="td_note_line" colspan="99">
                                                <span t-field="line.name"/>
                                            </td>
                                        </t>
                                    </tr>

                                    <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                                        <tr class="is-subtotal text-right">
                                            <td name="td_section_subtotal" colspan="99">
                                                <strong class="mr16">Subtotal</strong>
                                                <span t-esc="current_subtotal"
                                                      t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>


                        <div class="clearfix" name="so_total_summary">
                            <div id="total" class="row" name="total">
                                <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                                    <t t-set='TOTALHT' t-value='doc.amount_untaxed'/>
                                    <table class="table table-sm">
                                        <tr class="border-black o_subtotal">
                                            <td class="text-dark">
                                                <strong>TOTAL HT</strong>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="doc.amount_untaxed"/>

                                                <!-- <span t-field="doc.amount_untaxed"/> -->
                                            </td>
                                        </tr>

                                        <t t-if="doc.amount_tax > 0">
                                            <tr class="border-black o_subtotal">
                                                <td>
                                                    <strong>Total TVA</strong>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="doc.amount_tax"/>
                                                </td>
                                            </tr>
                                        </t>

                                        <tr class="border-black o_subtotal">
                                            <td class="text-dark">
                                                <strong>Total TTC</strong>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="doc.amount_total"/>
                                            </td>
                                        </tr>

                                    </table>
                                </div>
                            </div>
                        </div>
                        <br/>
                        <br/>

                        <div class="mt32 ml64 mr6" name="signature">
                            <div class="offset-6 text-left" style="font-size : 0.2.em; background-color: #f2f2f2;">
                                <strong>Signature du client (précédée de la maison Bon pour accord )</strong>
                            </div>

                        </div>

                        <div class="oe_structure"/>


                    </div>
                </t>
            </t>
        </t>
    </template>


</odoo>