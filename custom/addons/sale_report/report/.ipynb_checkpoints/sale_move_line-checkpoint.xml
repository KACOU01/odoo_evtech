<odoo>
    <data>
        <record id="action_report_saleorder_inherit" model="ir.actions.report">
            <field name="name">Facture / Commande modif</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">hta_sale_report.sale_order_modification_inherit</field>
            <field name="report_file">hta_sale_report.sale_order_modification_inherit</field>
            <field name="print_report_name">(object.state in ('draft', 'sent') and 'Quotation - %s' % (object.name)) or 'Order - %s' % (object.name)</field>
            <field name="binding_model_id" ref="sale.model_sale_order"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>